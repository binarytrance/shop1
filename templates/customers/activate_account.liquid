<div class="account-content">
<div id="customer-activate" class="row">
  <div class="columns large-12">
    <h1 class="page-title">{{ 'customer.activate_account.page_title' | t }}</h1>
    {% include 'snippet-breadcrumbs' %}
    <p class="note create-password">{{ 'customer.activate_account.subtext' | t }}</p>

    {% form 'activate_customer_password' %}
    {{ form.errors | default_errors }}

    <label class="label" for="password">{{ 'customer.activate_account.password' | t }}</label>
    <input type="password" value="" name="customer[password]" id="customer_password" class="text" size="16" />

    <label class="label" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
    <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text" size="16" />

    <div class="action_bottom">
      <input class="button" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
      <a style="margin-left: 15px;" href="/">{{ 'customer.activate_account.cancel' | t }}</a>
    </div>
    {% endform %}
  </div> 
</div>
</div>