<div class="account-content">

<div id="customer-reset-password">
  <div class="row">
    <div class="columns large-7">
      <h1 class="page-title">{{ 'customer.reset_password.page_title' | t}}</h1>
      {% include 'snippet-breadcrumbs' %}

      {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <label class="label" for="password">{{ 'customer.reset_password.password' | t}}</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="text" size="16" />
      
      <label class="label" for="password_confirmation">{{ 'customer.reset_password.password_confirmation' | t}}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text" size="16" />
      
      <div class="action_bottom">
        <input class="button" type="submit" value="{{ 'customer.reset_password.submit' | t}}" />
      </div>
      {% endform %}
    </div>
  </div> 
  
</div>
</div>