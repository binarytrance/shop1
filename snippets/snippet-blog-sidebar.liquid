<div class="side-bar columns large-3">
  <div class="divider"></div>
  <div class="recent-articles block clearfix colored-links">
    <h3 class="title">{{ 'blog.sidebar.recent_articles' | t }}</h3>
    <ul>
      {% for article in blog.articles limit:10 %}
      <li class="item">
        <a href="{{ article.url }}">{{ article.title }}</a> <br/><em>{{ 'blog.sidebar.posted_on' | t }} {{ article.published_at | date: format: 'month_day_year' }}</em>
      </li>
      {% endfor %}
    </ul>
  </div>

  <div class="tags block clearfix colored-links">
    {% if blog.all_tags.size > 0 %}
    <h3 class="title">{{ 'blog.sidebar.tags' | t }}</h3>
    <ul>
      <li class="item{% unless current_tags %} active{% endunless %}"><a href="{{ shop.url}}/blogs/{{ blog.handle }}">{{ 'blog.sidebar.tags_show_all' | t }}</a></li>
      {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li class="item active">{{ tag | link_to_remove_tag: tag }}</li>
      {% else %}
      <li class="item">{{ tag | link_to_add_tag: tag }}</li>
      {% endif %}
      {% endfor %}
    </ul>
    {% endif %}
  </div>
</div>