<div class="collection-item columns large-4">
  <a href="{{ collection.url }}">
    <div class="image-wrapper">
      <div class="hover"></div>
      {% if collection.image %}
        {%
          include "framework--image",
          image: collection.image,
          full_width: true
        %}
      {% else %}
        {%
          include "framework--image",
          image: collection.products.first.featured_image,
          full_width: true
        %}
      {% endif %}
    </div><!-- .coll-image-wrap -->
    <div class="caption">
      <div class="bg"></div>
      <div class="inner">
        <div class="title">
          {{ collection.title }}
        </div>
        {% assign trans_product = 'collections.product' | t %}
        {% assign trans_products = 'collections.products' | t %}
        <p class="product-count">{{ collection.all_products_count }} {{ collection.all_products_count | pluralize: trans_product, trans_products }}</p>
      </div>
    </div>
  </a>
</div>
{% cycle 'clear-row': '', '', '<div class="clearfix"></div>' %}