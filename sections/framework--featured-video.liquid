{% comment %} Variables {% endcomment %}
{% assign heading = section.settings.heading  | escape %}
{% include 'framework--background-colors', bg_color: section.settings.background-color %}

{% comment %} View {% endcomment %}
<div
  class="featured-video--root"
  data-section-id="{{ section.id }}"
  style="{% if bg_color %}background-color: {{ bg_color }};{% endif %}"
>
  <div class="featured-video--container">
    {% if heading != blank %}
      <div class="featured-video--header">
        <h2 class="featured-video--heading">{{ heading }}</h2>
      </div>
    {% endif %}

    <div class="featured-video--body">
      {% if section.settings.video_url.size > 0 %}
        <div class="video--root" data-js-class="FrameworkVideo">
          {% if section.settings.video_url.type == "youtube" %}
            <iframe
              width="560"
              height="315"
              src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}"
              frameborder="0"
              allowfullscreen
            >
            </iframe>
          {% elsif section.settings.video_url.type == "vimeo" %}
            <iframe
              width="560"
              height="315"
              src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}"
              frameborder="0"
              webkitallowfullscreen
              mozallowfullscreen
              allowfullscreen
            >
            </iframe>
          {% endif %}
        </div>
      {% else %}
        <div class="video--root" data-js-class="FrameworkVideo">
          {% comment %}https:\/\/www.youtube.com\/watch?v=_9VUPq3SxOc{% endcomment %}
          <iframe
            width="560"
            height="315"
            src="https://www.youtube.com/embed/_9VUPq3SxOc"
            frameborder="0"
            allowfullscreen
          >
          </iframe>
        </div>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Video",
    "settings": [
      {
        "id": "background-color",
        "label": "Background color",
        "type": "select",
        "options": [
          { "label": "None", "value": "none" },
          { "label": "Light grey", "value": "light" },
          { "label": "Accent", "value": "accent" }
        ],
        "default": "none"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Video"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video link",
        "accept": ["youtube", "vimeo"]
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Video"
      }
    ]
  }
{% endschema %}
